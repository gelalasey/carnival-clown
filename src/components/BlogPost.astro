---
const { url, title, image } = Astro.props;

// fallback image if undefined
const displayImage = image ?? {
    url: "/images/jesterlord.webp",
    alt: "Placeholder image",
};
---

<a href={url} class="post-card">
    <img src={displayImage.url} alt={displayImage.alt} class="post-image" />
    <h2 class="post-title">{title}</h2>
</a>

<style>
    .post-card {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease;
    }

    .post-card:hover {
        transform: translateY(-4px);
    }

    .post-image {
        width: 100%;
        height: 120px;
        object-fit: cover;
    }

    .post-title {
        font-size: 1rem;
        font-weight: bold;
        padding: .5rem;
        color: #333;
    }
</style>
